{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "mdeditor",
  "version": "0.1.0",
  "identifier": "com.mdeditor.app",
  "build": {
    "beforeDevCommand": "npm run start",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist/mdeditor/browser"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Orion - Start page",
        "width": 800,
        "height": 600,
        "maxWidth": 800,
        "maxHeight": 600,
        "resizable": false,
        "fullscreen": false,
        "maximized": false,
        "maximizable": false,
        "dragDropEnabled": true,
        "hiddenTitle": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
